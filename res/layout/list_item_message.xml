<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="@dimen/activity_horizontal_margin">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Suject"
            android:id="@+id/messageListSubject"
            android:layout_marginBottom="@dimen/activity_vertical_margin_small" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Last Message"
            android:id="@+id/messageListLastMessage"
            android:layout_below="@+id/messageListSubject"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Last date"
            android:id="@+id/messageListLastDate"
            android:layout_below="@+id/messageListSubject"
            android:layout_alignParentRight="true"/>

</RelativeLayout>