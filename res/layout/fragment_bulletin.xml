<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="@dimen/activity_vertical_margin_small">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#dateCreate"
                android:id="@+id/bulletin_date_create" android:gravity="right"
                android:layout_alignParentRight="true" android:textStyle="italic"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Subject"
                android:layout_alignParentTop="false" android:layout_alignParentLeft="true"
                android:textStyle="bold" android:textSize="@dimen/text_medium"
                android:id="@+id/bulletin_subject" android:layout_below="@+id/bulletin_date_create"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#text"
                android:id="@+id/bulletin_text" android:layout_below="@+id/bulletin_subject"
                android:layout_alignParentLeft="true" android:layout_marginTop="@dimen/activity_vertical_margin_small"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin" android:gravity="fill"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bulletin_created_by"
                android:id="@+id/bulletin_created_by" android:layout_below="@+id/bulletin_text"
                android:textStyle="italic"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#author"
                android:id="@+id/bulletin_author" android:layout_toRightOf="@+id/bulletin_created_by"
                android:layout_alignBaseline="@+id/bulletin_created_by"
                android:layout_marginLeft="@dimen/activity_vertical_margin_small"/>

    </RelativeLayout>
</ScrollView>