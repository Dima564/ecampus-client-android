<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_vertical_margin_small"
                android:paddingRight="@dimen/activity_vertical_margin_small"
                android:paddingBottom="@dimen/activity_vertical_margin_small">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#senderName"
            android:id="@+id/senderName" android:textStyle="bold" android:visibility="invisible"/>

    <ImageView
            android:layout_width="@dimen/avatar_message"
            android:layout_height="0dp"
            android:id="@+id/avatar_small" android:layout_alignParentRight="true" android:layout_alignParentTop="false"
            android:padding="@dimen/activity_vertical_margin_small" android:contentDescription="avatar_small"
            android:layout_alignParentLeft="false" android:visibility="invisible"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#timeSended"
            android:id="@+id/timeSent" android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true" android:textStyle="italic" android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#textMessage"
            android:id="@+id/textMessage"
            android:layout_alignParentRight="false" android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/avatar_small" android:gravity="left"
            android:layout_alignParentTop="true"/>
</RelativeLayout>