<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyboard_controls"
                android:layout_alignParentBottom="true">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:id="@+id/sendButton" android:layout_alignParentRight="true" android:layout_alignParentTop="false"
            android:textSize="@dimen/text_small" android:layout_alignParentBottom="true"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageText" android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/sendButton"
            android:singleLine="false" android:layout_alignParentBottom="true"/>
</RelativeLayout>