<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.kpi.campus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET"> </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".Campus">
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" android:label="@string/app_name"/>
        <activity android:name=".Activity.messenger.MessageActivity" android:label="@string/message_view" />
        <activity android:name=".Activity.CollectionDemoActivity" android:label="@string/demo_collection" />
        <activity android:name=".Activity.bulletinboard.BulletinActivity" android:label="@string/bulletin_activity_name" />
        <activity android:name=".Activity.userlist.UserListActivity" android:label="@string/users" />
        <activity android:name=".Activity.messenger.CreateConversationActivity" android:label="@string/create_message" android:noHistory="true"/>


    </application>

</manifest>
